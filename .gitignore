# This .gitignore file is specifically for Unity projects

# OS-specific files
.DS_Store
Thumbs.db

# Folders for Unity Editor generated files
[Tt]emp/
[Oo]bj/
[Bb]uild/
[Bb]uilds/
[Ll]ogs/
[Mm]emoryCaptures/
Assets/StreamingAssets/*.apk

# Avoid uploading any crash reports
[Dd]ebug/
CrashReports/

# Avoid uploading project settings and editor preferences
ProjectSettings/EditorBuildSettings.asset
ProjectSettings/ProjectVersion.txt
ProjectSettings/QualitySettings.asset
ProjectSettings/TagManager.asset
ProjectSettings/TimeManager.asset

# Unity's cache directory
/[Uu]serSettings/

# Avoid uploading local user files (IDE, Unity preferences)
*.csproj
*.unityproj
*.sln
*.suo
*.tmp
*.user
*.userprefs
*.pidb
*.booproj
*.svd
*.pdb
*.opendb
*.VC.db
.vscode/

# Avoid uploading logs, crash dumps, stack traces
*.log

# TextMeshPro generated files
[Tt]extMesh Pro/

# Builds directory
Build/

# Avoid uploading auto-generated lightmaps
[Ll]ightmapSnapshot
*.lightmapsnapshot
*.exr

# Autogenerated files for plugins
/Assets/Plugins/*/Editor/

# Unity auto-generated AssetDatabase file
/Assets/Plugins/x86/
